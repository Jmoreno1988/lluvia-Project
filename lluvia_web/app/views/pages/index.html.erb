<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Description</th>
      <th>Link</th>
      <th>Body</th>
      <th>Parent</th>
      <th>Tutorial</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.titulo %></td>
        <td><%= page.description %></td>
        <td><%= page.link %></td>
        <td>...</td>
        <td><%= page.parent_id %></td>
        <td><%= page.tutorial %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

